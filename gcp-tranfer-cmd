//-- Change User
sudo usermod -aG sudo user2
sudo adduser user2 cnode
sudo rsync -va /home/user1/ /home/user2
sudo chown -R user2:sudo /opt/cardano
sudo chown -R user2:sudo /home/user2/
sudo deluser user1
sudo deluser --remove-home user1
echo export PATH=~/.cabal/bin:$PATH >> ~/.bashrc
source ~/.bashrc
sudo reboot

//-- Firewall rule
--name: host-port
--network-tag: host
--ip-range: 0.0.0.0/0
--tcp-port: 5000,9100,9093,9087,80,443

--name: relay-peer-port
--network-tag: noderelay
--ip-range: 0.0.0.0/0
--tcp-port: 6000

--name: core-peer-port
--network-tag: core
--ip-range: [RELAY-IP-ADDRR-INTERNAL]
--tcp-port: 3008

--name: monitoring-port
--network-tag: core / relay / host
--ip-range: [HOST-IP-ADDRR-EXTERNAL],[127.0.0.1]
--tcp-port: 9091,12798
